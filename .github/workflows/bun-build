name: Bun CI

on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Set up Bun
        uses: oven-sh/setup-bun@v2 # Bun の公式アクション
        with:
          bun-version: latest # または '1.0.0' のような特定のバージョンを指定
          
      - name: Install dependencies
        run: bun install # bun package manager を使用

      # テストの実行
      - name: Run tests
        run: bun test # bun test runner を使用

      # ビルドの実行
      - name: Run build
        run: bun run build # package.json に定義されたスクリプトを実行
